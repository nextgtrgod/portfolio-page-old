
@keyframes fade-in
	0%
		opacity 0
	100%
		opacity 1

@keyframes move-down
	0%
		transform translate3d(0, -100%, 0)
	100%
		transform translate3d(0, 0, 0)

@keyframes move-top
	0%
		transform translate3d(0, 0, 0)
	100%
		transform translate3d(0, -100%, 0)


@keyframes move-right
	0%
		transform translate3d(-150%, 0, 0)
	100%
		transform translate3d(0, 0, 0)


// scroll animations
body
	&[data-section='about']
		#about
			opacity 1
			pointer-events all
			
		#bulb-3
			opacity 1


	&[data-section='skills']
		#skills
			opacity 1
			transition opacity .2s
			pointer-events all
			ul
				li
					animation move-down .4s
			
		#bulb
			&-1
			&-2
			&-4
			&-5
				animation-name fade-in, move-down
				animation-duration .4s
				animation-fill-mode forwards
			&-3
				opacity 1
				right 20%
		
		#triangles
			opacity 1
			path
				animation-name fade-in, move-right
				animation-duration .4s
				animation-fill-mode forwards
	

	&[data-section='projects']
		#projects
			opacity 1
			transition opacity .2s
			pointer-events all
		
		.bulbs
			transition all .4s
			transform translate3d(-65%, 0, 0)

		#bulb
			&-1
			&-2
			&-4
			&-5
				animation-name fade-in, move-down
				animation-duration .4s
				animation-fill-mode forwards
			&-3
				opacity 1
				right 20%
		
		#triangles
			opacity 1
			transition all .4s
			transform translate3d(-100%, 0, 0)
			path
				animation-name fade-in, move-right
				animation-duration .4s
				animation-fill-mode forwards