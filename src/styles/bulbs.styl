

.bulbs
	position fixed
	top 0
	right 0
	width 100%
	height 100%
	transition all .4s
	&>*
		position absolute
		top -1%
		opacity 0
		transition opacity .4s, right .4s
		will-change transform, opacity
		fill: $color-dark
	#trigger-invert
		cursor url(./assets/cursor-pointer.png), auto

	#bulb
		&-1
			right 100px
			width 200px
			animation-delay .3s
		&-2
			right 20px
			width 132px
			animation-delay .2s
		&-3
			right 50%
			height 95%
			g
				transition all .4s
				path
					transition all .4s

		&-4
			right 560px
			width 155px
			filter blur(2px)
			animation-delay .1s
		&-5
			right 445px
			width 85px
			filter blur(4px)
			animation-delay .4s