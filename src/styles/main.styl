@import 'normalize'
@import 'variables'


body
	height 300vh
	background-color: $color-bg
	font-family: $font-family-normal

	&.loaded
		.page
			opacity 1


#triangles
	position absolute
	top -10%
	left -30%
	bottom -10%
	margin auto
	width 75%
	// height 120%
	*
		fill none
		stroke #111


.page
	position fixed
	width 100%
	height 100%
	opacity 0
	transition opacity .4s


.content
	position relative
	width 60%
	overflow hidden

	section
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		height 100vh


@import 'bulbs'
@import 'sections/about'
@import 'sections/skills'
@import 'sections/projects'

@import 'scrollbar'