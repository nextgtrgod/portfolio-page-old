@import url('https://fonts.googleapis.com/css?family=Jura:400,600');

@import 'variables'
@import 'normalize'


absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	margin auto


body
	height 300vh
	background-color: $color-bg
	font-family: $font-family-normal
	transition all .2s

	&.loaded
		.page
			opacity 1


.page
	position fixed
	width 100%
	height 100%
	opacity 0
	transition opacity .4s


.content
	position absolute
	top 0
	bottom 0
	width 60%
	// overflow hidden

	@import 'sections/section'


#advice
	position absolute
	left 50%
	bottom 6%
	transform translateX(-50%)
	font-size 1.1em
	opacity 0
	user-select none
	&:after
		content ''
		position absolute
		left 0
		right 0
		bottom -2.6em
		margin auto
		width 4em
		height 4em
		background-image url('./assets/chevron.svg')
		opacity .8
		background-position center
		background-size cover
		background-repeat no-repeat
		animation bounce 2s infinite

	&:focus
		outline none



@import 'triangles'
@import 'bulbs'
@import 'sections/about'
@import 'sections/skills'
@import 'sections/projects'
@import 'animation'
@import 'scrollbar'
@import 'invert'