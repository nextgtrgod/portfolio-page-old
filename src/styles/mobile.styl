@import url('https://fonts.googleapis.com/css?family=Jura:400,600');

@import 'variables'
@import 'normalize'


absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	margin auto


body
	background-color: $color-bg
	font-family: $font-family-normal
	overflow-x hidden
	font-size 6px
	@media (min-width 720px)
		font-size 8px
	@media (min-width 960px)
		font-size 10px
	@media (min-width 1200px)
		font-size 14px
	@media (min-width 1400px)
		font-size 16px
	@media (min-width 1600px)
		font-size 18px
	@media (min-width 1900px)
		font-size 21px
	
	&.loaded
		.content
			opacity 1
			#about
				h1
					animation-name fade-in, move-right
					animation-duration .4s
					animation-fill-mode forwards

				h2
					animation-name fade-in, move-left
					animation-duration .4s
					animation-delay .2s
					animation-fill-mode forwards
				
				.polygon
					&:nth-of-type(1)
						animation-name fade-in, move-bottom
						animation-duration .4s
						animation-delay .1s
						animation-fill-mode forwards

					&:nth-of-type(2)
						animation-name fade-in, move-up
						animation-duration .4s
						animation-delay .3s
						animation-fill-mode forwards

					&:nth-of-type(3)
						animation-name fade-in
						animation-duration .4s
						animation-delay .4s
						animation-fill-mode forwards
				
				.contacts
					animation-name fade-in
					animation-duration .4s
					animation-delay .5s
					animation-fill-mode forwards


