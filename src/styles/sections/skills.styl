
#skills
	position relative
	width 100%
	h2
		top 12%
		right 10%

	ul
		position absolute
		top 0
		left 0
		bottom 0
		margin auto
		display grid
		width 100%
		height 50%
		grid-auto-rows 8.5%
		grid-template-columns repeat(15, 5%)
		grid-auto-flow dense
		grid-gap 10px
		justify-content center
		align-items space-around
		li
			position relative
			color transparent
			font-size 2.5em
			// font-family 'Source Code Pro', monospace
			font-weight 600
			text-align center
			box-shadow: 0 0 0 2px $color-dark
			transform-style preserve-3d
			will-change transform
			cursor url(./assets/cursor-drag.png), auto
			&.skill
				&-html
					background-color #f16529
					font-size 3.4em
				&-css
					background-color #33a9dc
					text-align right
					letter-spacing 5px
				&-stylus
					font-size 1.5em
					background-color #323330
				&-js
					background-color #f0db4f
					.inner
						top unset
						left unset
						right 10px
						bottom 0
						color #323330
						font-size 2.8em
						font-weight bold
						line-height 3.1em
						height 2em

				&-react
					background-color #005e77
					font-size 1.625em
				&-vue
					background-color #41b883
					font-size 1.5em
				&-node
					background-color #8e2a8e
					font-size 1em

			&.size
				&--1
					grid-row auto / auto
					grid-column auto / auto
				
				&--2
					grid-column auto / span 2
					grid-row auto / span 2
				
				&--3
					grid-column auto / span 3
					grid-row auto / span 3
				
				&--4
					grid-column auto / span 4
					grid-row auto / span 4
				
				&--5
					grid-column auto / span 5
					grid-row auto / span 5
				
				&--6
					grid-column auto / span 6
					grid-row auto / span 6
			
			.inner
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				height 35px
				line-height 35px
				padding 10px
				margin auto
				letter-spacing 1px
				color #FEFEFE
				transform translateZ(30px)
				user-select none
				z-index 2
			
			.js-tilt-glare
				z-index 1