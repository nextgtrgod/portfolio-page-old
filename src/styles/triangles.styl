#triangles
	position absolute
	top -10%
	left -30%
	bottom -10%
	margin auto
	width 60%
	opacity 0
	transition all .4s
	*
		fill none
		stroke: $color-dark 
		// stroke-width 3px

	path
		transform translate3d(-100%, 0, 0)
		opacity 0
		for i in (1..83)
			&:nth-of-type({i})
				animation-delay (83 / i * .1)s